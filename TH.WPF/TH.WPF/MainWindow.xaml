<Window x:Class="TH.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TH.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Menu DockPanel.Dock="Top" Height="20">
                <MenuItem Header="File"></MenuItem>
                <MenuItem Header="Edit"></MenuItem>
                <MenuItem Header="View"></MenuItem>
                <MenuItem Header="Options"></MenuItem>
                <MenuItem Header="Help"> </MenuItem>
            </Menu>
            <DockPanel Height="20" DockPanel.Dock="Bottom"></DockPanel>
            <DockPanel LastChildFill="True">
                <DockPanel Height="100" DockPanel.Dock="Bottom" LastChildFill="True">
                    <DockPanel Width="100" DockPanel.Dock="Left">                        
                    </DockPanel>
                    <DockPanel DockPanel.Dock="Right" LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left" Width="350"/>
                        <TextBlock Width="350" DockPanel.Dock="Right"></TextBlock>
                        <GridSplitter Width="2"></GridSplitter>
                    </DockPanel>
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <ListView HorizontalAlignment="Stretch" Width="100" MaxWidth="300" DockPanel.Dock="Left">

                    </ListView>
                    <DataGrid DockPanel.Dock="Right">

                    </DataGrid>
                </DockPanel>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
