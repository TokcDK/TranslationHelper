<Window x:Class="TH.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TH.WPF"
        xmlns:vm="clr-namespace:TH.WPF.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="0.40*"/>
            <ColumnDefinition Width="0.40*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="0,50*"/>
            <RowDefinition Height="0,15*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Grid.ColumnSpan="3" Height="20">
            <MenuItem Header="File">
                <MenuItem Header="Open" Command="{Binding OnOpen}"/>
                <MenuItem Header="Write"/>
                <MenuItem Header="Save DB"/>
                <MenuItem Header="Save DB as"/>
                <MenuItem Header="Export"/>
                <MenuItem Header="Import"/>
            </MenuItem>
            <MenuItem Header="Edit"></MenuItem>
            <MenuItem Header="View"></MenuItem>
            <MenuItem Header="Options"></MenuItem>
            <MenuItem Header="Help"></MenuItem>
        </Menu>
        
        <ListView 
            ItemsSource="{Binding FilesList}" 
            SelectedItem="{Binding SelectedFile}"
            ToolTip="{Binding SelectedFile.Info}"
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding File.Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <DataGrid 
            ItemsSource="{Binding SelectedFile.Content}" 
            SelectedItem="{Binding SelectedRow}"
            Grid.Row="1" 
            Grid.Column="1" 
            Grid.ColumnSpan="2"            
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            AutoGenerateColumns="False"
            >
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Header="Original" Binding="{Binding Original}" Width="0.5*"/>
                <DataGridTextColumn Header="Translation" Binding="{Binding Translation, UpdateSourceTrigger=PropertyChanged}" Width="0.5*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0">
                <TextBlock
                    Text="{Binding SelectedFile.Info}"
                    ToolTip="{Binding SelectedFile.Info}"
                    Width="Auto"
                    TextWrapping="Wrap"/>
            </ScrollViewer>
            <ScrollViewer Grid.Row="1">
                <TextBlock 
                    Text="{Binding SelectedRow.Info}"
                    ToolTip="{Binding SelectedRow.Info}"
                    Width="Auto"
                    TextWrapping="Wrap"/>
            </ScrollViewer>
        </Grid>
        
        <ScrollViewer Grid.Row="2" Grid.Column="1">
            <TextBlock 
                Text="{Binding SelectedRow.Original}"
                Width="Auto"
                TextWrapping="Wrap"/>
        </ScrollViewer>
        <ScrollViewer Grid.Row="2" Grid.Column="2">
            <TextBox 
                Text="{Binding SelectedRow.Translation, UpdateSourceTrigger=PropertyChanged}"
                Width="Auto"
                TextWrapping="Wrap"/>
        </ScrollViewer>
        
        <GridSplitter Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Right" Background="Gray" Width="2"/>
        <GridSplitter Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" Background="Gray" Width="2"/>
        <GridSplitter Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Background="Gray" Height="2"/>
        <Separator Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="Gray" Height="1"/>

        <Grid 
            Grid.Column="0"
            Grid.Row="3"
            Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="2">
                <TextBlock DockPanel.Dock="Left" Text="Rows: "/>
                <TextBlock DockPanel.Dock="Right" Text="{Binding SelectedFile.Content.Count}"/>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
